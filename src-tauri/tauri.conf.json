{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QueryStudio",
  "version": "0.1.17",
  "identifier": "com.lasse.querystudio",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "QueryStudio",
        "width": 1400,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVGMTIyQjg0OENDRDMyRjgKUldUNE1zMk1oQ3NTWDhHT2p4NkQzTTdjUmc3a0Vlbjg2SkhvbFRuTFE4WkRZdWpRTWF1RzdGWlAK",
      "endpoints": [
        "https://github.com/lassejlv/querystudio-releases/releases/latest/download/latest.json"
      ]
    }
  }
}
